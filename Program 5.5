using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Занятие_5_Задача_5
{
    class Program
    {
        static void Main(string[] args)
        {
            //задача про двумерный массив NxN
            Console.WriteLine("Введите с целое число N для создания массива:");
            int n = int.Parse(Console.ReadLine());
            int[,] array = new int[n, n];
            Random random = new Random();
            Console.WriteLine("Cформирован массив NxN:");
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    array[i, j] = random.Next(0,2);
                    Console.Write("{0}", array[i, j]);
                }
                Console.WriteLine();
            }
            Console.ReadKey();


        }
    }
}
